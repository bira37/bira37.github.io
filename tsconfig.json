{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "target": "es5",
    "module": "esnext",
    "outDir": "./dist/",
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["dom", "es2018", "esnext"],
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true
  },
  "include": ["src", "declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}
